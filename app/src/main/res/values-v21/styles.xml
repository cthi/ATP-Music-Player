<resources>

    <!-- Base application theme. -->
    <style name="ATPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/grey_bg</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="NotifTextTitleTheme" parent="@android:style/TextAppearance.Material.Notification.Title"/>

    <style name="NotifTextSubtitleTheme" parent="@android:style/TextAppearance.Material.Notification"/>

    <style name="ATPTheme.Tabs" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">2dp</item>
    </style>
</resources>
