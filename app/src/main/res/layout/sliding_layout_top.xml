<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">

    <RelativeLayout
        android:id="@+id/sliding_layout_top"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/green">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/sliding_layout_action_ico"
            android:clickable="true"

            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/drag_view"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/sliding_layout_action_ico"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sliding_layout_song_title"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="TEST"/>

            <TextView
                android:id="@+id/sliding_layout_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@id/sliding_layout_song_title"
                tools:text="TEST"/>
            </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_below="@+id/sliding_layout_top"
        android:background="@color/white">
    </LinearLayout>

</RelativeLayout>